@{
    ViewData["Title"] = "List Issues";
}

@model IEnumerable<MuniApp.Models.Issue>

<div class="backButton">
    <a asp-controller="Issues" asp-action="ReportIssues">← Back</a>
</div>

<div class="home-body" id="issues-list">

    <table class="product-table">
        <thead>
            <tr>
                <th colspan="7" class="product-table-head">Reported Issues</th>
            </tr>
            <tr class="column-heads">
                <th>Issue Num</th>
                <th>Location</th>
                <th>Category</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Status</th>
               
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model)
            {
                <tr>
                    <td>@issue.Id</td>
                    <td>@issue.Location</td>
                    <td>@issue.Category</td>
                    <td>@Html.Raw(issue.Description)</td>
                    <td>
                        @{
                            var priorityText = issue.Priority switch
                            {
                                1 => "Low",
                                2 => "Medium",
                                3 => "High",
                                _ => "Unknown"
                            };
                        }
                        @priorityText
                    </td>
                    <td>@issue.Status</td>
                    
                    <td>
                        <img src="@issue.ImagePath" width="50" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-controller="Issues" asp-action="ReportIssues">Report Issue</a>